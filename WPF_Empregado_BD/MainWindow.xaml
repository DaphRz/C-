<Window x:Class="WPF_Empregado_BD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Empregado_BD"
        mc:Ignorable="d"
        Title="MainWindow" Height="512" Width="623">

    <Grid Margin="0,0,10,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="344*"/>
            <ColumnDefinition Width="269*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Dados do Empregado" HorizontalAlignment="Left" Margin="38,35,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <Label Content="Matrícula" HorizontalAlignment="Left" Margin="38,104,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.277,0.705"/>
        <TextBox HorizontalAlignment="Left" Margin="128,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="262" Height="25" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>
        <Label Content="CPF" HorizontalAlignment="Left" Margin="38,149,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.277,0.705"/>
        <TextBox HorizontalAlignment="Left" Margin="128,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="262" Height="25" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="38,191,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.277,0.705"/>
        <TextBox HorizontalAlignment="Left" Margin="128,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="262" Height="25" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>
        <Label Content="Endereço" HorizontalAlignment="Left" Margin="38,243,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.277,0.705"/>
        <TextBox HorizontalAlignment="Left" Margin="128,246,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="262" Height="61" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>

        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="5" Margin="105,112,28,200" Grid.Column="1">
            <Grid Margin="0,6,0,-6">
                <Button Content="Pesquisar" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="88" FontSize="14" Click="Button_Click"/>
                <Button Content="Salvar" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" Width="88" FontSize="14" Click="Button_Click"/>
                <Button Content="Excluir" HorizontalAlignment="Center" Margin="0,95,0,0" VerticalAlignment="Top" Width="88" FontSize="14" Click="Button_Click"/>
                <Button Content="Limpar" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" Width="88" FontSize="14" Click="Button_Click"/>
            </Grid>
        </Border>

        <!--DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,366,0,10"/>-->
        <DataGrid x:Name="DataGridEmpregadoList" Margin="0,350,-11,0" ColumnWidth="*" CanUserAddRows="False" Grid.ColumnSpan="2"/>
        <Label x:Name="LabelStatus" Content="Status" HorizontalAlignment="Left" Margin="184,26,0,0" VerticalAlignment="Top" Width="96" FontSize="15" RenderTransformOrigin="0.833,0.7" Grid.Column="1"/>
    </Grid>
</Window>
